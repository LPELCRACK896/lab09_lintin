{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "plugin:prettier/recommended",
        "airbnb",
        "prettier",
        "eslint:recommended",
        "plugin:react/recommended"
    ],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "react",
        "prettier"
    ],
    "ignorePatterns": ["Game.js", "Card.js"],
    "rules": {
        "no-unused-vars":"warn",
        "no-console": "warn",
        "prettier/prettier": "warn",
        "no-lonely-if": "error"
    }
}
